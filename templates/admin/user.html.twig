                <td>{{ user.firstname }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user_age.age[counter]}}</td>
                <td>{{ user.location }}</td>
                <td>{{ user.description }}</td>
                <td>{{ user.img }}</td>
                <td>
                    <a href=" {{path('update_user')}} ">mdifier user</a>
                    <a href=""> suprimer user</a>
                </td>


            </tr>
            {% endfor %}
        </tbody>
    </table>
    
    <a href=" {{ path('create_user')}} ">créé user</a>


{% endblock %}
