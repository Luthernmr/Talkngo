{% extends 'base.html.twig' %}

{% block title %}Hello ProfilController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <div class="profile container">
        <img src="{{user.img}}" alt="">
        <h1>{{ user.firstname }}</h1>
        <p>{{user.description}}</p>
    </div>
</div>

        
<div class="form-largescreens">
{{ form_start(formPublication) }}
    
    {{ form_widget(formPublication,{'attr':{'class':'form-control'} }) }}

    <button type="submit" class="submit">Publier l'annonce</button>
{{ form_end(formPublication) }}
</div>
{% endblock %}
