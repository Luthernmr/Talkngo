{% extends 'base.html.twig' %}

{% block title %}Hello ProfilController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <div class="profile container">
        <img src="{{asset('img/profil/' ~ user.img)}}" alt="pdp" class="profile-img" width="80px" height="80px">
        <h3>{{ user.firstname }}</h1>
        <h3>{{ user.name }}</h2>
        <h3>{{ user_age}} ans</h3>
        <h3>{{ user.location }}</h3>
        <p>{{user.description}}</p>
    </div>

    
            
<div>
    <h2>Mes voyages</h2>
    {% for publication in publications %}
        {% if publication.user.id == user.id %}
            {{publication.countryName}}
        {% endif %}
        {% else %}
            <h2> Aucun voyages effectu√©</h2>
    {% endfor %}
</div>

   
<div class="formulaire container">
    <h2>Ajouter un nouveau voyage</h2>
{{ form_start(formPublication) }}
    
    {{ form_row(formPublication.countryName,{'attr':{'class':'fomulaire' , 'placeholder' : 'exemple'} }) }}
    {{ form_row(formPublication.date,{'attr':{'class':'fomulaire'} }) }}
    {{ form_row(formPublication.duration,{'attr':{'class':'fomulaire'} }) }}
    {{ form_row(formPublication.img,{'attr':{'class':'fomulaire'} }) }}

    <button type="submit" class="submit">Publier l'annonce</button>
{{ form_end(formPublication) }}
</div>
{% endblock %}
