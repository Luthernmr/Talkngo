{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}


{% block body %}
{% for message in app.flashes('message') %}
<div class="alert alert-success " role="alert">
    {{message}}
</div>

{% endfor %}
<form method="post">
    {% if error %}
    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
    <div class="mb-3">
        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
    </div>
    {% endif %}
    <div class="form-largescreen">
        <h1>Connectez-vous</h1>
        <label for="inputEmail">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required
            autofocus>
        <label for="inputPassword">Password</label>
        <input type="password" name="password" id="inputPassword" class="form-control" required>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <button class="submit" type="submit">
            Connexion
        </button>
         <div class="lien-mdp">      
        <a class="liens-mdp-oublie" href=" {{ path('app_forgotten_password') }} ">mot de passe oubli√©</a> <br>
        <a class="liens-mdp-oublie" href=" {{path('app_register')}} ">inscription</a>
    </div> 
    </div>
    {#
    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
    See https://symfony.com/doc/current/security/remember_me.html

    <div class="checkbox mb-3">
        <label>
            <input type="checkbox" name="_remember_me"> Remember me
        </label>
    </div>
    #}

</form>


{% endblock %}
