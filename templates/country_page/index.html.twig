
{% extends "base.html.twig" %}
{% form_theme formPublication 'bootstrap_4_layout.html.twig' %}

{% block title %}{{ countryPage.countryNameFr }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">


{{ form_start(formPublication) }}
    
        {% if countryPage.countryNameFr %}
                <h1 class="">{{ countryPage.countryNameFr }}</h1>
        {% endif %}
        
        <div class="form-largescreens">
        {{ form_start(formPublication) }}
            
            {{ form_row(formPublication.countryName) }}
            {{ form_row(formPublication.date) }}
            {{ form_row(formPublication.duration) }}
        
            <button type="submit" class="submit">Publier l'annonce</button>
        {{ form_end(formPublication) }}
        </div>
        
            
<article class=" ">
  {% for publication in publications %}
  {% if countryPage.countryName == publication.countryName  %}
  <div class="">
    <div class="presentation">
      <div class="user-info">
        <img src="{{asset('img/profil/publication.user.img')}}" alt="pdp">
        <h3>{{publication.user.name}}</h3>
      </div>
      <div class="date">
        <h4>{{publication.user.location}} <i class="fas fa-plane"></i> {{countryPage.countryNameFr}}</h4>
        <h4 class="">d√©part le {{publication.date | date('d/m/Y')}}</h4>
      </div>
      <button class="button-info-1">En savoir plus</button>
      <button class="button-info-2">Contacter</button>
    </div>
  </div>
  {% endif %}
{% endfor %}
</article>
        
          
</body>
{% endblock %}
