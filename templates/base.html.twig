<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="https://bootswatch.com/4/sandstone/bootstrap.min.css">
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
        <link rel="stylesheet" href="../public/css/style.css">
        <link rel="stylesheet" href="../public/css/style_home.css">
        <link rel="stylesheet" href="../public/css/form.css">
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        <header class="large-screen">

            <a href="{{path('home')}}"><img class="logo" src="../public/css/img/logo-horizontal (1).svg" alt=""></a>
            <div class="header-content">
    
                <li><input class="searchbar" type="search" name="myInput" placeholder="Chercher un pays" id="myInput" onkeyup="searchFunction()"></li>
                    <ul id="myUL">
                        {% for country in countrys %}
                        <li id="liste-recherche">
                            <a href="{{ path('country_page',{'id':country.id } ) }}">{{ country.countryName }}</a>
                        </li>
                        {% endfor %}
                    </ul>
                <script>
                    function searchFunction() {
                        var input, filter, ul, li, a, i, txtValue;
                        input = document.getElementById("myInput");
                        filter = input.value.toUpperCase();
                        ul = document.getElementById("myUL");
                        li = ul.getElementsByTagName("li");
                        for (i = 0; i < li.length; i++) {
                            a = li[i].getElementsByTagName("a")[0];
                            txtValue = a.textContent || a.innerText;
                            if (txtValue.toUpperCase().indexOf(filter) > -1) {
                                li[i].style.display = "";
                            } else {
                                li[i].style.display = "none";
                            }
                        }
                    }
                    </script>
    
                <li>
                    <div class="spacebar"></div>
                </li>
            
                <li><a class="register" href="{{path('app_register')}}">Inscription</a></li>
                <li><a class="login" href="">Connexion</a></li>
    
            </div>
        </header>
    
        <header class="phone-screen">
            <img class="logo" src="../public/css/img/logo-vertical (2).svg" alt="">
            <input class="searchbar" type="search" name="" placeholder="Chercher un pays">
    
            <a class="register" href="{{path('app_register')}}">Inscription</a>
            <a class="login" href="">Connexion</a>
    
        </header>
    
        {% block body %}<body>

            <a href="{{ path('admin_user') }}">users</a>   
                   
        </body>{% endblock %}
        <footer>
            <li><a href="#">A propos</a></li>
            <li><a href="#">Nous contacter</a></li>
            <li><a href="#">Talk'n Go Â© Copyright 2021</a></li>
        </footer>  
    </body>
</html>
