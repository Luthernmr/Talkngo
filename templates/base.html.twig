<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
      
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}
        <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

        <link rel="stylesheet" href="https://bootswatch.com/4/sandstone/bootstrap.min.css">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
        
        <link rel="stylesheet" href="{{asset('css/stylePublication.css')}}">
        <link rel="stylesheet" href="{{asset('css/style.css')}}">
        <link rel="stylesheet" href="{{asset('css/style_home.css')}}">
        <link rel="stylesheet" href="{{asset('css/form.css')}}">
        <link rel="stylesheet" href="{{asset('css/stylePays.css')}}">
        <link rel="stylesheet" href="{{asset('css/styleProfil.css')}}">
        {% block javascripts %}
        <script src="{{ asset('js/searchbar.js') }}"></script>
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}

    </head>
    
        <header>
            
            <a href="{{path('home')}}"><img class="logo" src="{{asset('css/img/logo-horizontal-1.svg')}}" alt="logo talkngo"></a>
         
        <div class="d-flex flex-row align-items-center">
            <div class="header-content">
                <div class="liste-searchbar">
                <input class="searchbar m-3 " onClick="afficheListe()" type="search" name="myInput" placeholder="Chercher un pays" id="myInput" onkeydown="searchFunction(); afficheListekeyboard()">
                    <ul id="myUL">
                       {% for country in countrys %}
                       <li class="container-fluid" id="suggestion">
                            <a class="pays" id="pays" href="{{ path('country_page',{'id':country.id } ) }}">{{ country.countryName }} </a>
                        </li>
                        {% endfor %} 
                    </ul>    
            </div>

          <div class="spacebar"></div>
            
          
            {% if app.user %}

            
            <nav class="navbar navbar-expand-lg navbar-light  ">
               
                    <i class="fas fa-3x fa-bars menu-profil navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"></i>
                  
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav mr-auto d-flex">
                
                            <li class="d-flex info align-items-center">
                               <div class="d-flex flex-column align-items-center">
                                <a href="{{ path('profil') }}"><img src="{{asset('img/profil/' ~ app.user.img)}}" alt="pdp" class="profil-img m-2" width="80px" height="80px"></a>
                                <h6 class="nom-photo">{{app.user.firstName|upper}} {{app.user.name}}</h6>
                            </div>
                            <a class="login m-2" href="{{ path('app_logout') }}">Déconnexion</a>

                            </li>
                
                            
            
                        </ul>
         
                    </div>
            </nav>
            {% else %}
            <a class="login m-3" href=" {{ path('app_login') }} ">Connexion</a>
            <a class="register m-3" href="{{ path('app_register') }}">Inscription</a>
            
        {% endif %}
       
        </div>
                
            
                
    </div>
    </header>


    
        {% block body %}
        <body >
          
                   
        </body>
        {% endblock %}
        <footer>
            <li><a href="{{path('apropos')}} ">A propos</a></li>
            <li><a href="{{path('contact')}}">Nous contacter</a></li>
            <li><p class="copyright">Talk'n Go © Copyright 2021</p></li>
        </footer>  
        <script src="https://kit.fontawesome.com/ccb1e14628.js" crossorigin="anonymous"></script>
    </body>
</html>
